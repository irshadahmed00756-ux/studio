{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "dob": {
          "type": "string",
          "format": "date-time",
          "description": "The user's date of birth."
        },
        "address": {
          "type": "string",
          "description": "The user's shipping address."
        },
        "gender": {
          "type": "string",
          "description": "The user's gender.",
          "enum": ["male", "female", "other"]
        }
      },
      "required": ["name"]
    },
    "wishlistItem": {
      "title": "Wishlist Item",
      "description": "Represents an item in a user's wishlist.",
      "type": "object",
      "properties": {
        "productId": {
          "type": "string",
          "description": "The ID of the product."
        },
        "addedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The date and time the item was added."
        }
      },
      "required": ["productId", "addedAt"]
    }
  },
  "auth": {
    "providers": ["email-password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/userProfile"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/wishlist/{wishlistItemId}": {
      "schema": {
        "$ref": "#/entities/wishlistItem"
      },
      "description": "Stores a user's wishlist items. The document ID is the product ID."
    }
  }
}
